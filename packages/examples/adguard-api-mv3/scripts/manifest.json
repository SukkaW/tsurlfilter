{
    "manifest_version": 3,
    "version": "0.0.1",
    "name": "Sample AdGuard API MV3",
    "short_name": "Sample AdGuard API MV3",
    "author": "Adguard Software Ltd.",
    "description": "Sample extension using Adguard API MV3",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "pages/popup.html"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "js": [
                "content-script.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "match_about_blank": true,
            "run_at": "document_start"
        }
    ],
    "minimum_chrome_version": "84.0",
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "tabs",
        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "scripting",
        "activeTab",
        "webRequest",
        "webNavigation",
        "storage",
        "unlimitedStorage",
        "scripting"
    ],
    "web_accessible_resources": [
        {
            "resources": ["/war/*"],
            "matches": [ "http://*/*", "https://*/*" ],
            "use_dynamic_url": true
        }
    ]
}

