{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"es2015",
    "lib": ["esnext", "dom"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "src",
    "cli"
  ],
  "ts-node": {
    "swc": true,
    "compilerOptions": {
      "module":"CommonJS",
    }
  }
}
